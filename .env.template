# LLM Provider API Keys
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google
GOOGLE_API_KEY=your_google_api_key_here

# Groq
GROQ_API_KEY=your_groq_api_key_here

# Search Tools
TAVILY_API_KEY=your_tavily_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here
GOOGLE_CSE_API_KEY=your_google_custom_search_api_key_here

# Optional: LangSmith (for monitoring and debugging)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=agent_builder

# Optional: Code Execution
E2B_API_KEY=your_e2b_api_key_here

# Application Settings
API_HOST=0.0.0.0
API_PORT=8000
BUILDER_UI_PORT=8501
AGENT_UI_PORT=8502

# Database paths (for local deployment)
CHECKPOINT_DB_PATH=./data/checkpoints
STORE_DB_PATH=./data/store

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
API_RELOAD=true  # Set to false to disable auto-reload (easier to stop the server)
API_AUTO_DEPLOY=false  # Set to true to deploy all agents on startup (slower start, agents ready immediately)
